    "express": "^4.18.1",
    "jasmine": "^4.3.0",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "super": "^0.2.3",
    "supertest": "^6.2.4",
    "test": "^3.2.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.3",

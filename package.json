{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "migrate": "db-migrate --env test up && db-migrate up",
    "migrate:refresh": "db-migrate --env development down && db-migrate up",
    "test": "set NODE_ENV=test&& db-migrate --env test up && jasmine-ts && db-migrate db:drop test",
    "tsc": "tsc",
    "start": "set NODE_ENV=development&& db-migrate --env development up && nodemon --watch ./src/**/*.ts --exec ts-node ./src/server.ts && db-migrate db:drop development",
    "start:build": "set NODE_ENV=production&& db-migrate --env production && npm run build && node build/server.js && db-migrate db:drop production",
    "format": "prettier --config .prettierrc.json src/**/* --write",
    "lint": "eslint . --ext .ts",
    "build": "rimraf build && set NODE_ENV=production&& npx tsc",
    "rimraf": "./node_modules/rimraf/bin.js",
    "clean": "rimraf build"
  },
  "author": "Mohamed Bahrawy",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jasmine": "^4.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "migrate": "^1.8.0",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "super": "^0.2.3",
    "supertest": "^6.2.4",
    "test": "^3.2.1",
    "typedi": "^0.10.0",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.3",
    "@types/jest": "^28.1.8",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.184",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.5",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "nodemon": "^2.0.19",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.7.4"
  }
}
